{
  "$schema": "https://turbo.build/json-schema.json",
  "globalEnv": ["REDIS_URL", "NODE_ENV"],
  "globalDependencies": ["**/.env.local", "**/.env"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": [".next/**", "dist/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": []
    }
  }
}
